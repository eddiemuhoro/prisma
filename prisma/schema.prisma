generator client {
  provider ="prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model employee{
  id        String      @default(uuid()) @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name     String
  email   String @unique
  password String
  profilePic String @default("https://firebasestorage.googleapis.com/v0/b/apt-rite-346310.appspot.com/o/profile.jpg?alt=media&token=71a31f30-11ee-49b9-913c-b3682d3f6ea7")
  phone String?
  jobs job[] @relation("employee")

}


model employer{
  id        String      @default(uuid()) @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name     String
  secondName String?
  email   String @unique
  password String
  profilePic String @default("https://firebasestorage.googleapis.com/v0/b/apt-rite-346310.appspot.com/o/profile.jpg?alt=media&token=71a31f30-11ee-49b9-913c-b3682d3f6ea7")
  phone String?
  jobs job[] @relation("employer")

}

model job{
  id        String      @default(uuid()) @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String
  description   String?
  //an array of skills
  skills String[]
  employer employer @relation("employer",fields: [employerId], references: [id])
  employerId String
  employee employee? @relation("employee",fields: [employeeId], references: [id])
  employeeId String?
}




